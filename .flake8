[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = D203,E203,E501,RST201,RST203,RST301,W503,S101
exclude = .venv,.tox,docs,build,dist,__pycache__
max-line-length = 88
max-complexity = 10
docstring-convention = google
per-file-ignores =
    __init__.py:F401
    tests/*:S101,D103,F821,S311,F401,
    tests/conftest.py:S311,S608
    tests/test_main.py:S311,
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
